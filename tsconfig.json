{
  "compilerOptions": {
    "target": "ES6",   
    //"module": "commonjs",
    "module": "esnext",
    "moduleResolution": "node",
    "rootDir": "./src",   
    "outDir": "./dist",
    "esModuleInterop": true, 
    "forceConsistentCasingInFileNames": true, 
    "strict": true,    
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]   
}
 